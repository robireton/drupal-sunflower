<?php

function sunflower_menu() {
    return array( 'sunflower' => array(
        'menu_name' => 'main-menu',
        'type' => MENU_NORMAL_ITEM,
        'title' => 'Sunflower',
        'description' => t('An abstract simulation of a sunflowerâ€™s growth pattern using the HTML canvas element and a little math.'),
        'page callback' => 'sunflower_view',
